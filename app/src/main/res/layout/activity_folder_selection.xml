<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        style="?appBarLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back_24dp"
            app:title="@string/folder_selection_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Permission Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/permissionStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/permissionStatusTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_status"
                        android:textAppearance="?textAppearanceTitleMedium"
                        android:textColor="?colorOnSurface" />

                    <TextView
                        android:id="@+id/permissionStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/permission_status_loading"
                        android:textAppearance="?textAppearanceBodyMedium"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/grantPermissionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/select_folders"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Default Folders Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_folders"
                android:textAppearance="?textAppearanceTitleSmall"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/defaultFoldersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- User Selected Folders Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_folders"
                android:textAppearance="?textAppearanceTitleSmall"
                android:textColor="?colorPrimary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customFoldersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- Add Folder Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addFolderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_custom_folder"
                android:layout_marginBottom="16dp"
                app:icon="@drawable/ic_add_24dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Scan Now Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/scanNowButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scan_now"
                app:icon="@drawable/ic_refresh_24dp" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/emptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_folders_selected"
                android:textAppearance="?textAppearanceBodyMedium"
                android:textColor="?colorOnSurfaceVariant"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
